<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.fragments.MyWorkoutFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_MyWorkout"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello!" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_margin="10dp"
        android:id="@+id/muscle_navigation"
        style="bottomBar.style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/muscle_navigation_menu" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler"
        tools:listitem="@layout/my_exercise_layout"
        android:layout_weight="1"/>


</LinearLayout>