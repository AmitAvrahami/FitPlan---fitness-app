<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.fragments.PlanWorkoutFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_MyWorkout"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan your workout!" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_margin="10dp"
        android:id="@+id/muscle_navigation"
        style="bottomBar.style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/muscle_navigation_menu" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler"
        android:layout_weight="1"/>

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/savePlan_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save plan!"/>



</LinearLayout>