<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Image Background -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="270"
                android:centerY="0.3"
                android:centerX="0.4"
                android:centerColor="#323232"
                android:endColor="#000000"
                android:startColor="#787878"/>
        </shape>
    </item>
    <!-- Bitmap Layer -->
    <item
        android:width="250dp"
        android:height="200dp"
        android:gravity="center|bottom">
        <bitmap
            android:src="@drawable/logo3_remove_bg" />
    </item>
</layer-list>